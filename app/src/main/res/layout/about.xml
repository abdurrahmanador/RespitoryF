<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/about_bg"
    tools:context=".About">

    <TextView
        android:id="@+id/aboutUSTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="About Me"
        android:textSize="35sp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:fontFamily="@font/boldandika"
        />

    <TextView
        android:id="@+id/developerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/aboutUSTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Abdur Rahman"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldandika"
        />
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/developerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+8801682474757,+8801632423080"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        />

    <TextView
        android:id="@+id/education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/developerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="BSc. in CSE"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldandika"
        />
    <TextView
        android:id="@+id/varsity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/education"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Student of \nInternational Islamic University Chittagong"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        />

    <TextView
        android:id="@+id/aboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/varsity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="CyberSecurity Learner"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldandika"
        />
    <TextView
        android:id="@+id/meh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/aboutMe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Currently Learning:\n01.Cyber Security\n02.Flutter"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        />


    <TextView
        android:id="@+id/contactWithUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Contact With me: abiabdullahinshaalloh@gmail.com"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        />


</androidx.constraintlayout.widget.ConstraintLayout>